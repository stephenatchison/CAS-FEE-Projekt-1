{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Node",
            "program": "${workspaceRoot}/index.js",
            "cwd": "${workspaceRoot}",
            "skipFiles": [
                "node_modules/**/*.js"
            ]
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceRoot}"
        }
    ]
}